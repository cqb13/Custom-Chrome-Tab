{
  "name": "Custom Chrome Background",
  "description": "Set a custom background for new tabs",
  "version": "0.0.3",
  "manifest_version": 3,

  "permissions": ["storage", "activeTab", "scripting", "notifications"],

  "action": {
    "default_title": "Custom Chrome Background",
    "default_popup": "/layout/popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "32": "/images/icon32.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },

  "chrome_url_overrides": { "newtab": "/layout/tab.html" }
}
